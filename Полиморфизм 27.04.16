		}
	}
	void Print()
	{
		cout << "graph 2" << endl;
		for (int i = 0; i < 2; i++)
		{
			for (int j = 0; j < m; j++)
				cout << a[i][j] << " " ;
			cout << endl;
		}
	}

};


