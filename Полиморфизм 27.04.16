class Graph
{
protected:
	int n;
	int m;
public:
	Graph(int n, int m)
	{
		this->n = n;
		this->m = m;
	}
	
	virtual void Input() = 0;
	virtual void Print() = 0;
	static Graph* CreateGraph(int n, int m)
	{
		if (rand() % 2 == 0)
			return new Graph1(n);
		else
			return new Graph2(n, m);
	}
};
class Graph1 : public Graph
{
protected:
	int ** a;
public:
	Graph1(int n) : Graph(n, 0)
	{		
		CreateMatrix();
	}
private: 
	void CreateMatrix()
	{
		cout << "Graph 1 CreateMatrix" << endl;
		a = new int *[n];
		for (int i = 0; i < n; i++)
		{
			a[i] = new int[n];
			for (int j = 0; j < n; j++)
				a[i][j] = 0;
		}
	}
public:
	void Input()
	{ 
		cout << "graph 1" << endl;
		for (int i = 0; i < n ; i++)
		{
			for (int j = i + 1; j < n; j++)
			{
				cin >> a[i][j];
				a[j][i] = a[i][j];
			}
		}
	}
	void Print()
	{
		cout << "graph 1" << endl;
		for (int i = 0; i < n; i++)
		{
			for (int j = 0; j < n; j++)
				cout << a[i][j] << " ";
			cout << endl;
		}
	}

};

class Graph2 :public Graph
